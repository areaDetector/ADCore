##############################################################################
#  Controls how frequently to read the condition of the detector             #
##############################################################################

record(longout, "$(P)$(R)ADSCReadConditn")
{
   field(DTYP, "asynInt32")
   field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))ADSC_READ_CONDITION")
   field(SCAN, "5 second")
}

