   field(THVL, "3")
   field(FRST, "CONFIGDET")
   field(FRVL, "4")
   field(FVST, "RETRY")
   field(FVVL, "5")
   field(SXST, "TEMPCONTROL")
   field(SXVL, "6")
   field(SCAN, "I/O Intr")
}

